<!DOCTYPE html>
    <html lang="en">
    <head>
        {{>headelinks}}
    </head>
    <body>
        {{>navbar}}

        <!-- main Header -->
        <div class="container-fluid main_header">
            <div class="row">
                <div class="col-md-10 col-12 mx-auto">
                    <div class="main_content">
                        <form class="temp_form">
                            <input type="text" id="cityName" placeholder="Enter Yiur city name" autocomplete="off">
                            <input type="submit" value="search" id="submitBtn">
                        </form>
                    </div>

                    <div class="tempInformation">
                        <div class="top_layer">
                            <p id="day">Day</p>
                            <p id="today_date">Date</p>
                        </div>

                        <div class="main_layer ">
                            <p id="city_name">Search your city & see weather</p>
                            <div class="middele_layer data_hide">
                                <p id="temp"><span id="temp_real_val">0</span><sup>o</sup>C</p>
                                <div id="temp_status"><i class="fa fa-solid fa-cloud "></i></div>
                            </div>

                        </div>


                    </div>
                </div>
            </div>
        </div>


        <!-- Footer code  -->
        {{>footer}}

        <script src="js/main.js"></script>
                    
    </body>
</html>